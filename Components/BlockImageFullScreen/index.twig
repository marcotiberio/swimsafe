<flynt-component load:on="visible" name="BlockImageFullScreen">
  <div class="wrapper relative">
    <figure class="figure">
      {% if image %}
        <img class="figure-image lazyload h-screen w-screen object-cover"
          src="{{ image.src }}"
          data-srcset="{{function('wp_get_attachment_image_srcset', image.id)}}"
          data-sizes="auto"
          alt="{{ image.alt|e }}">
      {% endif %}
    </figure>
    {% if options.showLogo %}
    <div class="logo absolute top-0 no-underline h-screen w-screen flex items-center">
      <img class="logo-image w-full px-sm" width="142" height="44" src="{{ logo.src }}" alt="{{ logo.alt }}">
    </div>
    {% endif %}
  </div>
</flynt-component>
